{
  "name": "clipup",
  "version": "0.0.3",
  "description": "",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/clipup/clipup.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "build:win": "electron-builder build --win --publish always",
    "build:linux": "electron-builder build --linux --publish always"
  },
  "author": {
    "name": "S.Katheeskumar",
    "email": "katheesh@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "clipboard-event": "^1.0.1",
    "electron-updater": "^4.3.5",
    "jquery": "^3.5.1",
    "tailwindcss": "^2.0.2"
  },
  "build": {
    "productName": "Clipup",
    "appId": "clipup.gitleaf.com",
    "publish": [
      {
        "provider": "github",
        "owner": "clipup",
        "repo": "clipup"
      }
    ],
    "win": {
      "target": [
        "nsis:ia32",
        "nsis:x64"
      ],
      "publisherName": "GitLeaf, Inc.",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "synopsis": "Copy once paste anywhere",
      "category": "Utility",
      "target": [
        "deb",
        "zip",
        "AppImage"
      ],
      "icon": "build/icons"
    }
  }
}
